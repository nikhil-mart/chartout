<?xml version="1.0" encoding="utf-8"?>
<layout>

  <data>

    <variable
      name="buss"
      type="com.locolhive.chartout.profile.BusinessDetails"/>

  </data>

  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="24dp"
      android:paddingBottom="24dp"
      android:paddingLeft="@dimen/content_margin_lr"
      android:paddingRight="@dimen/content_margin_lr"
      android:fitsSystemWindows="true"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
          android:id="@+id/btn_basic"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          android:padding="8dp"
          android:background="@drawable/bg_rect_trans_padding"
          android:minHeight="0dp"
          android:text="Basic Details"
          android:textAllCaps="false"
          android:textColor="@color/grey800"
          android:textSize="15sp"/>
        <Button
          android:id="@+id/btn_buss"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:padding="8dp"
          android:background="@drawable/bg_rect_blue"
          android:minHeight="0dp"
          android:text="Bussiness Details"
          android:textAllCaps="false"
          android:textColor="@android:color/white"
          android:textSize="15sp"/>

      </LinearLayout>

      <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="IF YOU HAVE A REGISTERED COMPANY, PLEASE PROVIDE DETAILS "
        android:textColor="@color/mast"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"/>

      <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Company Name"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:singleLine="true"
        android:text="@={buss.companyName}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Company Display Name"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.companyDisplayName}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv3"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="Company Address Information"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />

      <TextView
        android:id="@+id/tv3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Pincode"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="numberSigned"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.companyAddress.pincode}"
        android:textSize="17sp"
        />
      <TextView
        android:id="@+id/tv3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="City"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.companyAddress.city}"
        android:textSize="17sp"
        />
      <TextView
        android:id="@+id/tv3_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="State"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et3_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.companyAddress.state}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv4"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="Please upload one scanned copy of address proof from below"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv4_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="(Document should be in your name)"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv4_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:text="* Electricity Bill, Bank Statement, Aadhar Card, Passport Copy, Certificate of incorporation, Rental Agreement"
        android:textColor="@color/grey600"
        android:textSize="@dimen/sub_h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <Button
        android:id="@+id/btn_up1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/bg_rect_grey"
        android:minHeight="0dp"
        android:text="@string/upload_file"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>


      <TextView
        android:id="@+id/tv5_"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="Legal Documents"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />

      <TextView
        android:id="@+id/tv5_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Your company's Pan Number: *"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et5_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.panNumber}"
        android:textSize="17sp"
        />
      <TextView
        android:id="@+id/tv5_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Upload Scanned Copy"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <Button
        android:id="@+id/btn_up2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        android:background="@drawable/bg_rect_grey"
        android:minHeight="0dp"
        android:text="@string/upload_file"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>

      <TextView
        android:id="@+id/tv6_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="If you have a GST Number, please provide the same and the document supporting it"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et6_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.gstNumber}"
        android:textSize="17sp"
        />
      <TextView
        android:id="@+id/tv6_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Upload Scanned Copy"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <Button
        android:id="@+id/btn_up3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        android:background="@drawable/bg_rect_grey"
        android:minHeight="0dp"
        android:text="@string/upload_file"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>

      <TextView
        android:id="@+id/tv7_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Aadhar Card Number: *"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et7_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.aadharNumber}"
        android:textSize="17sp"
        />


      <TextView
        android:id="@+id/tv8_"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="Bank Details"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />

      <TextView
        android:id="@+id/tv8_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Beneficiary Name"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et8_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.accountDetails.beneficiaryName}"
        android:textSize="17sp"
        />
      <TextView
        android:id="@+id/tv8_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Current Account Number"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et8_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.accountDetails.currentAccountNumber}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv8_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Upload Scanned Cancelled Check"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <Button
        android:id="@+id/btn_up4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        android:background="@drawable/bg_rect_grey"
        android:minHeight="0dp"
        android:text="@string/upload_file"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>

      <TextView
        android:id="@+id/tv8_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="IFSC Code"
        android:textColor="@color/grey600"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et8_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={buss.accountDetails.ifscCode}"
        android:textSize="17sp"
        />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
          android:id="@+id/btn_ifscVerify"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:padding="8dp"
          android:background="@drawable/bg_rect_green"
          android:minHeight="0dp"
          android:text="Verify"
          android:textAllCaps="false"
          android:textColor="@android:color/white"
          android:textSize="15sp"
          />
        <TextView
          android:id="@+id/ifscDetails"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:layout_marginLeft="6dp"
          android:layout_gravity="center"
          android:text=""
          android:textSize="13sp"/>
      </LinearLayout>


      <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_fround_green"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

    </LinearLayout>

  </ScrollView>

</layout>
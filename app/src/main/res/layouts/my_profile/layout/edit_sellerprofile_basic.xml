<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="com.locolhive.chartout.classes.SkillSet"/>

    <variable
      name="user"
      type="com.locolhive.chartout.profile.UserProfile"/>

    <variable
      name="skills"
      type="SkillSet[]"/>

  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="24dp"
      android:paddingBottom="24dp"
      android:paddingLeft="@dimen/content_margin_lr"
      android:paddingRight="@dimen/content_margin_lr"
      android:fitsSystemWindows="true"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
          android:id="@+id/btn_basic"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          android:padding="8dp"
          android:background="@drawable/bg_rect_blue"
          android:minHeight="0dp"
          android:text="Basic Details"
          android:textAllCaps="false"
          android:textColor="@android:color/white"
          android:textSize="15sp"/>
        <Button
          android:id="@+id/btn_buss"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:padding="8dp"
          android:background="@drawable/bg_rect_trans_padding"
          android:minHeight="0dp"
          android:text="Bussiness Details"
          android:textAllCaps="false"
          android:textColor="@color/grey800"
          android:textSize="15sp"/>

      </LinearLayout>

      <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Full Name"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:enabled="false"
        android:gravity="start"
        android:inputType="none"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@{user.fullName}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Tagline for you"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:enabled="false"
        android:gravity="start"
        android:inputType="none"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@{user.tagLine}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Short Description"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:enabled="false"
        android:gravity="start"
        android:inputType="none"
        android:maxLength="200"
        android:maxLines="4"
        android:minHeight="0dp"
        android:minLines="3"
        android:text="@{user.shortDescription}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Mobile Number"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        />
      <EditText
        android:id="@+id/et10_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:enabled="false"
        android:gravity="start"
        android:inputType="none"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@{user.mobileNumber}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="What are you good at"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv12_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:text="Max 3 skills you offer - 100 char each"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />

      <EditText
        android:id="@+id/et12_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Skill #1"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[0].skillName}"
        android:textSize="16sp"
        />
      <EditText
        android:id="@+id/et12_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Description"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[0].description}"
        android:textSize="16sp"
        />
      <EditText
        android:id="@+id/et12_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Duration"
        android:inputType="numberSigned"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[0].duration}"
        android:textSize="16sp"
        />

      <EditText
        android:id="@+id/et12_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Skill #2"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[1].skillName}"
        android:textSize="16sp"
        />
      <EditText
        android:id="@+id/et12_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Description"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[1].description}"
        android:textSize="16sp"
        />
      <EditText
        android:id="@+id/et12_23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Duration"
        android:inputType="numberSigned"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[1].duration}"
        android:textSize="16sp"
        />

      <EditText
        android:id="@+id/et12_31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Skill #3"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[2].skillName}"
        android:textSize="16sp"
        />
      <EditText
        android:id="@+id/et12_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Description"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[2].description}"
        android:textSize="16sp"
        />
      <EditText
        android:id="@+id/et12_33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:hint="Duration"
        android:inputType="numberSigned"
        android:maxLines="1"
        android:minHeight="0dp"
        android:text="@={skills[2].duration}"
        android:textSize="16sp"
        />

      <TextView
        android:id="@+id/tv13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Why do you want to share your skills and knowledge with people?"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv13_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:text="*Max 200 char"
        android:textColor="@color/grey800"
        android:textSize="@dimen/sub_h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv13_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:text="I want to share because"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLength="200"
        android:maxLines="4"
        android:minHeight="0dp"
        android:text="@={user.reasonToShareSkills}"
        android:textSize="17sp"
        />

      <TextView
        android:id="@+id/tv14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:text="Why should people choose you?"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv14_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:text="*Max 200 char"
        android:textColor="@color/grey800"
        android:textSize="@dimen/sub_h2_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <TextView
        android:id="@+id/tv14_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:text="I believe that"
        android:textColor="@color/grey800"
        android:textSize="@dimen/h3_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        />
      <EditText
        android:id="@+id/et14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingTop="@dimen/et_padding_tb"
        android:paddingBottom="@dimen/et_padding_tb"
        android:background="@drawable/bg_rect_trans_padding"
        android:gravity="start"
        android:inputType="text"
        android:maxLength="200"
        android:maxLines="4"
        android:minHeight="0dp"
        android:text="@={user.reasonToPeopleChooseYou}"
        android:textSize="17sp"
        />

      <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_fround_green"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

    </LinearLayout>

  </ScrollView>

</layout>
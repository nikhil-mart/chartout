<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_con"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  tools:context="com.locolhive.chartout.login.LoginSignupActivity"
  >

  <ImageView
    android:id="@+id/logo_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="52dp"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    android:layout_marginStart="56dp"
    android:layout_marginEnd="56dp"
    android:adjustViewBounds="true"
    android:fitsSystemWindows="true"
    android:scaleType="centerInside"
    android:src="@drawable/logo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/main_con"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="62dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logo_img">

    <Button
      android:id="@+id/logingoogle_btn"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:layout_marginBottom="16dp"
      android:paddingTop="2dp"
      android:paddingBottom="2dp"
      android:paddingLeft="22dp"
      android:background="@drawable/bg_fround_google"
      android:drawableLeft="@drawable/ic_google"
      android:drawablePadding="-40dp"
      android:drawableStart="@drawable/ic_google"
      android:foreground="@drawable/ripple_login"
      android:text="@string/login_google"
      android:textColor="@android:color/black"
      />

    <Button
      android:id="@+id/loginfb_btn"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:layout_marginBottom="16dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:paddingLeft="22dp"
      android:background="@drawable/bg_fround_fbblue"
      android:drawableLeft="@drawable/ic_fb"
      android:drawablePadding="-40dp"
      android:drawableStart="@drawable/ic_fb"
      android:foreground="@drawable/ripple_login"
      android:text="@string/login_fb"/>

    <Button
      android:id="@+id/loginemail_btn"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:layout_marginBottom="16dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:background="@drawable/bg_fround_trans_white"
      android:foreground="@drawable/ripple_login"
      android:text="@string/login_email"/>

    <Button
      android:id="@+id/signupemail_btn"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:layout_marginBottom="36dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:background="@drawable/bg_fround_trans_white"
      android:foreground="@drawable/ripple_login"
      android:text="@string/signup_email"
      />

  </LinearLayout>

</android.support.constraint.ConstraintLayout>

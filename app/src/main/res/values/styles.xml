<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="AppTheme.Map" parent="AppTheme">
    <item name="android:windowAnimationStyle">@null</item>
  </style>

  <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="AlertDialogCustom" parent="AlertDialog.AppCompat.Light">

  </style>

  <style name="LoginSignUpTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar">
    <item name="colorControlNormal">@android:color/darker_gray</item>
    <item name="colorControlActivated">@color/postCard_rating_colorActivated</item>
  </style>

  <style name="RatingBar2" parent="Widget.MaterialRatingBar.RatingBar">
    <item name="colorControlNormal">@android:color/darker_gray</item>
    <item name="colorControlActivated">@color/postCard_rating_colorActivated</item>
  </style>

  <style name="SeekBar" parent="Base.Widget.AppCompat.SeekBar">
    <item name="colorControlNormal">@android:color/darker_gray</item>
    <item name="colorControlActivated">@color/postCard_rating_colorActivated</item>
  </style>

  <style name="PostCardTheme">
    <item name="android:textColor">@color/postCard_textColor</item>
  </style>

  <style name="LightCardTheme">
    <item name="android:textColor">@color/grey800</item>
  </style>

  <style name="BgTheme" parent="LoginSignUpTheme">
    <item name="android:windowBackground">@drawable/bg2</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="AppTheme.ToolbarGrey" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.ToolbarCustom" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/light_blue</item>
  </style>

  <style name="title_size" parent="android:Widget.TextView">
    <item name="android:textSize">26sp</item>
  </style>

  <style name="DialogProgressStyle" parent="android:Theme.Dialog">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>

  <style name="PicDialogStyle" parent="android:Theme.Translucent.NoTitleBar">

    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/shadow</item>

  </style>


</resources>

